---
import DiscordIcon from "./icons/DiscordIcon.astro";
import sisterClubs from "../content/links/sisterclubs.json";
import blurb from "../content/footer/blurb.json";
import { Image } from 'astro:assets';
import logo from "../assets/logo.png";
import links from "../content/links/social.json";
---

<div
  class="bg-zinc-800 flex flex-col md:flex-row font-montserrat font-light text-stone-300 py-20 xl:py-12 text-base px-3 xl:px-0"
>
  <div class="md:w-5/12 pr-28 mb-14 md:mb-0 text-sm xl:text-base">
    <div class="mb-6">
      <Image src={logo} height={80} alt="Our logo" />
    </div>
    <div class="mb-10">
      {blurb.footer}
    </div>
    <div class="">Copyright Â© 2023 Cal State San Bernardino</div>
  </div>

  <div class="basis-6/12 mb-14 md:mb-0">
    <div class="flex">
      <div class="basis-6/12">
        <div class="mb-5 text-stone-400">Pages</div>
        <div class="flex flex-col gap-3 mb-3">
          <a href="/" class="hover:underline w-fit">Homepage</a>

          <a href="/about/" class="hover:underline w-fit">About us</a>
          <a href="/announcements/" class="hover:underline w-fit"
            >Announcements</a
          >
          <a href="/calendar/" class="hover:underline w-fit">Events</a>
          <a href="/archive/" class="hover:underline w-fit">Archive</a> 
        </div>
        <a href={links.discord}>
          <button class="btn btn-info">
            <DiscordIcon classes="h-6 w-6 flex fill-white" />
            <span class="">Discord
          </button>
        </a>
      </div>
      <div class="basis-6/12">
        <div class="mb-5 text-stone-400">Other Organizations</div>
        <div class="flex flex-col gap-3">
          {
            sisterClubs.sisters.map((sister) => {
              return (
                <div class="">
                  <a class="hover:underline" href={sister.link}>
                    {sister.name}
                  </a>
                </div>
              );
            })
          }
        </div>
      </div>
    </div>
  </div>

