---
import blurb from "../content/index/blurb.json";
import H1Text from "./H1Text.astro";
import links from "../content/links/social.json";
import DiscordIcon from "./icons/DiscordIcon.astro";

---

<div class="bg-stone-100 pt-12">
  <div class="flex flex-col mx-auto center text-center pt-8 pb-14">
    <div class="px-16 mb-12">
      <H1Text>
        Ready to run with the <span class="text-coyote-blue">Pack?</span>
      </H1Text>
      <div
        class="text-base xl:text-lg text-zinc-600 font-montserrat md:px-24 xl:px-0 pb-12"
      >
        {blurb.readyToRunWithThePack}
      </div>
      <a href={links.discord}>
        <button class="btn btn-info gap-2">
          <DiscordIcon classes="h-6 w-6 fill-white" />
          <span class="hidden lg:inline">Join us on Discord</span>
        </button>
      </a>    </div>
  </div>
</div>
